<div class="col-12">
    <div class="card">
        <h3 class="card-header">Edit Post</h3>
        <form class="card-body edit-post-form">
            <div>
                <label class="form-label" for="post-title">Title</label>
                <input id="post-title" name="post-title" type="text" autofocus="true" class="form-input"
                    value="{{post.title}}" />
            </div>
            <div>
                <label class="form-label" for="post-content">Content</label>
                <textarea name="post-content" class="form-input" autofocus="true">{{post.content}}</textarea>
            </div>
            <div>
                <button type="submit" class="btn">Update Post</button>
                <button type="button" class="delete-post-btn btn">Delete post</button>
            </div>
        </form>
    </div>
</div>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>